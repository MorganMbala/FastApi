@model List<FrontendAspNetCoreMVC.Models.Acteur>
@{
    ViewData["Title"] = "Acteurs";
    var total = ViewBag.Total as int? ?? Model.Count;
}
<div class="text-center mb-4">
    <h1 class="m-0" style="letter-spacing:2px;">ACTEURS</h1>
    <p class="mt-3">
        <a asp-action="Create" class="z-btn">CRÉER</a>
    </p>
    <p class="z-count">@ViewBag.Total acteurs</p>
</div>

<!-- Liste type “cards” minimalistes -->
@foreach (var a in Model)
{
    <div class="z-card">
        <img class="z-photo" src="@a.Picture" alt="@a.Name" />
        <div>
            <div class="z-name">@a.Name</div>
            <div class="z-bio">@a.Bio</div>
        </div>
        <div class="z-actions">
            <a asp-action="Edit" asp-route-id="@a.Id" class="z-btn-outline">Modifier</a>
            <a asp-action="Delete" asp-route-id="@a.Id" class="z-btn-outline">Supprimer</a>
        </div>
    </div>
}
