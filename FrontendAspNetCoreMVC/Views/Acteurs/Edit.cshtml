@model FrontendAspNetCoreMVC.Models.Acteur
@{
    ViewData["Title"] = "Modifier";
}
<h1 class="mb-4" style="letter-spacing:2px;">MODIFIER</h1>

<form asp-action="Edit" method="post" asp-route-id="@Model.Id" class="z-form" style="max-width:720px;">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input class="form-control" value="@Model.Id" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input name="Name" class="form-control" value="@Model.Name" />
    </div>
    <div class="mb-3">
        <label class="form-label">Bio</label>
        <textarea name="Bio" rows="6" class="form-control">@Model.Bio</textarea>
    </div>
    <div class="mb-4">
        <label class="form-label">Picture</label>
        <input name="Picture" class="form-control" value="@Model.Picture" />
    </div>

    <button type="submit" class="z-btn">Mettre à jour</button>
    <a asp-action="Index" class="z-btn-outline">Retour</a>
</form>
