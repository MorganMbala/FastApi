<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Acteurs</title>

    <!-- Police style ZARA (sobre, net). Inter fonctionne très bien partout -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="zara-theme">
    <header class="z-header container">
        <div class="d-flex justify-content-between align-items-center py-3">
            <a class="z-brand text-decoration-none" asp-controller="Acteurs" asp-action="Index">ACTEURS</a>
            <nav class="z-nav d-none d-md-flex gap-4">
                <a asp-controller="Acteurs" asp-action="Index" class="z-link">Accueil</a>
                <a asp-controller="Acteurs" asp-action="Create" class="z-link">Créer</a>
            </nav>
        </div>
        <hr class="z-hr" />
    </header>

    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <footer class="container py-5">
        <hr class="z-hr" />
        <p class="z-foot mb-0">© @DateTime.Now.Year — FrontendAspNetCoreMVC</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
